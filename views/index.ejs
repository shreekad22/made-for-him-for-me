<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>madeforhim - Level Up Your Vibe</title>
    <script src="https://cdn.tailwindcss.com/3.3.3"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üñ§</text></svg>">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .logo-font {
            font-family: 'Playfair Display', serif;
            letter-spacing: 0.1em;
            text-transform: uppercase;
        }

        .slide-in-left {
            transform: translateX(0);
        }

        .slide-out-left {
            transform: translateX(-100%);
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fadeInDown {
            animation: fadeInDown .6s cubic-bezier(.25, .46, .45, .94) forwards;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .animate-fadeIn {
            animation: fadeIn .8s cubic-bezier(.25, .46, .45, .94) forwards;
        }

        @keyframes scaleIn {
            from {
                transform: scale(.95);
                opacity: 0;
            }

            to {
                transform: scale(1);
                opacity: 1;
            }
        }

        .animate-scaleIn {
            animation: scaleIn .5s cubic-bezier(.25, .46, .45, .94) forwards;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-slideUp {
            animation: slideUp .8s cubic-bezier(.25, .46, .45, .94) forwards;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fadeInUp {
            animation: fadeInUp .8s cubic-bezier(.25, .46, .45, .94) forwards;
        }

        @keyframes pop {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.2);
            }

            100% {
                transform: scale(1);
            }
        }

        .animate-pop {
            animation: pop .3s cubic-bezier(.25, .46, .45, .94);
        }

        .grow-on-hover {
            transition: transform .3s, box-shadow .3s;
        }

        .grow-on-hover:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, .1);
        }

        .product-card {
            cursor: pointer;
            overflow: hidden;
        }

        .img-container {
            position: relative;
            padding-top: 125%;
            /* 4:5 aspect ratio */
            overflow: hidden;
        }

        .product-image {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: opacity .08s linear;
        }

        .category-card {
            overflow: hidden;
            transition: transform .3s, box-shadow .3s;
        }

        .category-card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, .1);
        }

        .modal {
            transition: opacity .3s, visibility .3s;
            background: rgba(0, 0, 0, .5);
        }

        .modal-content {
            transform: translateY(20px);
            transition: transform .3s;
        }

        .modal.is-active {
            opacity: 1;
            visibility: visible;
        }

        .modal.is-active .modal-content {
            transform: translateY(0);
        }

        #hero-section {
            background-color: #000;
            transition: height 0.5s ease-out;
            /* Added transition for smooth slide-up */
        }

        /* New class to hide and slide up the hero section */
        #hero-section.hidden-hero {
            height: 0 !important;
            overflow: hidden;
        }

        #hero-section .hero-panel {
            background-image: url('https://images.unsplash.com/photo-1594953932264-77d0a298811e?q=80&w=1500&auto=format&fit=crop');
        }

        .hero-panel {
            background-size: cover;
            background-position: center;
        }

        .hero-image {
            transition: filter 1s ease-out;
        }

        .hero-image.color {
            filter: grayscale(0%);
        }

        @keyframes slideFromSide {
            from {
                transform: translate(100vw, -50%);
                opacity: 0;
            }

            to {
                transform: translate(-50%, -50%);
                opacity: 1;
            }
        }

        #hero-logo {
            font-size: 10vw;
            line-height: 1;
            color: rgb(26, 16, 16);
            opacity: 0;
            mix-blend-mode: overlay;
            animation: slideFromSide 1.5s ease-out forwards;
        }

        #intro-logo {
            animation: fadeIn 1.5s ease-out forwards;
        }

        .truncate-ellipsis {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        @keyframes slide-up-fade-in {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .slide-up-fade-in {
            animation: slide-up-fade-in .5s ease-out forwards;
        }

        /* New styles for responsive categories */
        .category-card .img-container {
            position: relative;
            width: 100%;
            padding-top: 150%;
            /* 2:3 aspect ratio for portrait images */
            overflow: hidden;
        }

        .category-card img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* =========================
   PRODUCT GRID (4 PER ROW)
========================= */
        /* =========================
   PRODUCT GRID ‚Äì MOBILE FIX
========================= */

        .product-grid {
            display: flex;
            gap: 16px;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            padding-bottom: 12px;
        }

        .product-grid::-webkit-scrollbar {
            display: none;
        }

        .product-grid>.product-card {
            min-width: 75%;
            scroll-snap-align: start;
        }

        /* IMAGE FIX */
        .product-card .img-container {
            aspect-ratio: 4 / 5;
            width: 100%;
            overflow: hidden;
        }

        /* TABLET */
        @media (min-width: 640px) {
            .product-grid {
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                overflow: visible;
            }

            .product-grid>.product-card {
                min-width: auto;
            }
        }

        /* DESKTOP */
        @media (min-width: 1024px) {
            .product-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        .modal-content {
            max-height: 90vh;
            overflow-y: auto;
        }



        #WISHLIST div {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
        }

        /* =========================
   PRODUCT CARD (MAIN)
========================= */

        .product-card {
            width: 100%;
            border-radius: 18px;
            overflow: hidden;
            background: #f2f2f2;
            position: relative;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 18px 40px rgba(0, 0, 0, 0.18);
        }

        /* =========================
   IMAGE AREA (TALL CARD)
========================= */

        .product-card .img-container {
            position: relative;
            width: 100%;
            height: 380px;
            /* üî• MATCH IMAGE */
            background: #a48d6f;
            overflow: hidden;
        }

        /* FRONT & BACK IMAGES */
        .product-card img {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: opacity 0.35s ease;
        }

        /* =========================
   WISHLIST (HEART)
========================= */

        .wishlist-btn {
            position: absolute;
            top: 12px;
            right: 12px;
            background: #eee;
            border-radius: 50%;
            padding: 8px;
            border: none;
            cursor: pointer;
            z-index: 5;
            transition: transform 0.2s ease, background 0.2s ease;
        }

        .wishlist-btn:hover {
            transform: scale(1.1);
            background: white;
        }

        /* =========================
   BOTTOM INFO (NAME + PRICE)
========================= */

        .product-card .p-4 {
            background: #d1d1d1;
            padding: 14px 10px;
            text-align: center;
        }

        .product-card h2,
        .product-card h3 {
            font-size: 15px;
            font-weight: 600;
            color: #111;
            margin-bottom: 4px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .product-card p {
            font-size: 16px;
            font-weight: 700;
            color: #111;
        }

        /* =========================
   ADD TO BAG OVERLAY
========================= */

        .product-card .overlay {
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.18);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }

        .product-card:hover .overlay {
            opacity: 1;
            pointer-events: auto;
        }

        /* BUTTON */
        .add-to-bag-btn {
            background: white;
            color: #111;
            font-weight: 700;
            padding: 10px 28px;
            border-radius: 999px;
            font-size: 14px;
            border: none;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .add-to-bag-btn:hover {
            transform: scale(1.05);
        }

        /* =========================
   WISHLIST PAGE
========================= */

        #WISHLIST p {
            grid-column: 1 / -1;
            text-align: center;
            font-size: 16px;
            color: #555;
        }

        /* =========================
   BAG PAGE
========================= */

        #BAG img {
            border-radius: 10px;
        }

        .remove-from-bag-btn {
            color: #444;
            font-size: 14px;
            cursor: pointer;
        }

        .remove-from-bag-btn:hover {
            text-decoration: underline;
        }

        /* =========================
   RESPONSIVE
========================= */

        @media (max-width: 1024px) {

            #cord-grid,
            #polo-grid,
            #hoodie-grid,
            #racing-grid,
            #track-grid,
            #jersey-grid,
            #WISHLIST div {
                grid-template-columns: repeat(3, 1fr);
                gap: 14px;
            }
        }

        @media (max-width: 768px) {

            #cord-grid,
            #polo-grid,
            #hoodie-grid,
            #racing-grid,
            #track-grid,
            #jersey-grid,
            #WISHLIST div {
                grid-template-columns: repeat(2, 1fr);
                gap: 12px;
            }


        }

        @media (max-width: 480px) {

            #cord-grid,
            #polo-grid,
            #hoodie-grid,
            #racing-grid,
            #track-grid,
            #jersey-grid,
            #WISHLIST div {
                grid-template-columns: 1fr;
                gap: 10px;
            }
        }
    </style>
</head>

